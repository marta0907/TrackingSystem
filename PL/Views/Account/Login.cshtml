@model PL.Models.LoginViewModel

<div class="container login col-sm-6 col-md-6 col-lg-4">
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <h4 class="text-center font-weight-bold"> Login </h4>
            <h6 class="text-center font-weight-bold"> @ViewBag.Message </h6>
            <div class="form-group">
                <label asp-for="Email">Email Address</label>
                <input type="email" class="form-control" asp-for="Email" aria-describeby="emailHelp" placeholder="Enter your Email" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input class="form-control" asp-for="Password" placeholder="Enter your password" />
                <span asp-validation-for="Password" />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
            <div class="form-footer">
                <p> Don't have an account? <a asp-action="Register" asp-controller="Account">Sign Up</a></p>
            </div>
        </div>
    </form>
</div>