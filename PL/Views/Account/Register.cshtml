@model PL.Models.RegisterViewModel;


<div class="container register col-sm-8 col-md-6 col-lg-4">

    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group ">
            <h4 class="text-center font-weight-bold"> Register </h4>
            <h4 class="text-center font-weight-bold"> @ViewBag.Message </h4>
            <div class="form-group">
                <label asp-for="Name"> Name</label><br />
                <input class="form-control" type="text" asp-for="Name" placeholder="Name"/>
                <span asp-validation-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Age">Age</label><br />
                <input type="text" class="form-control" asp-for="Age" placeholder="Age"/>
                <span asp-validation-for="Age" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label><br />
                <input type="text" class="form-control" asp-for="Email"placeholder="Email" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label><br />
                <input class="form-control" asp-for="Password" placeholder="Password"/>
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label><br />
                <input class="form-control" asp-for="ConfirmPassword" placeholder="confirm password"/>
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
    </form>
</div>
