@using PL.Models
@model TaskViewModel

<div class="container register col-sm-8 col-md-6 col-lg-4">
    <form asp-action="CreateNewTask" asp-controller="Admin" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <h4 class="text-center font-weight-bold"> Create New Task</h4>
            <h4 class="text-center font-weight-bold"> @ViewBag.Message </h4>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input class="form-control" type="text" asp-for="Name" placeholder="name" />
                <span asp-validation-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea class="form-control" asp-for="Description" placeholder="description"></textarea>
                <span asp-validation-for="Description" />
            </div>
            <div class="form-group">
                <label asp-for="User">Choose User</label>
                @Html.DropDownListFor(task => task.User, ViewBag.Users as SelectList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Deadline">Deadline</label>
                <input class="form-control" type="date" asp-for="Deadline" placeholder="deadline"/>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                @Html.DropDownListFor(task => task.CategoryId, ViewBag.Categories as SelectList, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary btn-block">Create</button>
        </div>
    </form>
    <div class="form-groupe"><a asp-action="Index">Back to Users</a></div>
</div>
