@model BLL.DTO.UserDTO
@{
    ViewBag.Title = "Edit User";
}
<div class="container login col-sm-6 col-md-6 col-lg-4">
    <form asp-action="Edit" asp-controller="Admin" asp-route-id="@Model.Id">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <h4 class="text-center font-weight-bold"> Edit User </h4>
            <h6 class="text-center font-weight-bold"> @ViewBag.Message </h6>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label">Age</label>
                <input type="number" asp-for="Age" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label">Role</label>
                @Html.DropDownListFor(user => user.RoleId, ViewBag.Roles as SelectList)
            </div>
            <div class="form-group">
                <input type="email" asp-for="Email" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Save</button>
        </div>
    </form>
    <a asp-action="Index" asp-controller="Admin">Back to list</a>
</div>
