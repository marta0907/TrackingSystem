@using BLL.DTO;
@using System.Collections.Generic;
@model List<TaskDTO>

@if (Model.Count == 0)
{
    <h4>You Have not any tasks</h4>
}
else
{
    <div class="container login col-12">
        <h4 class="text-center font-weight-bold">Tasks List</h4>
        <h6 class="text-center font-weight-bold"> @ViewBag.Message </h6>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="text-center font-weight-bold">Name</th>
                    <th class="text-center font-weight-bold">Deadline</th>
                    <th class="text-center font-weight-bold">Mark</th>
                    <th class="text-center font-weight-bold"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center ">
                        <th>@item.Name</th>
                        <th>@item.Deadline</th>
                        <th>@item.Mark</th>
                        <th><a asp-action="CheckTask" asp-controller="Admin" asp-route-id="@item.Id">Check</a></th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
