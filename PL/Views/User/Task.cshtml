@model BLL.DTO.TaskDTO

<div class="container register col-sm-8 col-md-6 col-lg-4">
    <h6 class="text-center font-weight-bold"> @ViewBag.Message </h6>
    <form asp-action="Answer" asp-controller="User" asp-route-id="@Model.Id">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <h4 class="text-center font-weight-bold"> Write an answer </h4>
            <h6 class="text-center font-weight-bold"> @ViewBag.Message </h6>
            <div class="form-group">
                <p class="text-center font-weight-bold">@Model.Name</p>
            </div>
            <div class="form-group ">
                <p class="text-center font-weight-bold">@Model.Deadline</p>
            </div>
            <div class="form-group ">
                <p class="text-center font-weight-bold">@Model.Description</p>
            </div>
            @if (Model.JobStatusId == 2)
            {
                <div class="form-group">
                    <label asp-for="Answer" class="control-label">Your answer</label>
                    <input type="text" asp-for="Answer" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Save</button>
                <div class="form-group">
                    @Html.HiddenFor(x => x.Description)
                    @Html.HiddenFor(x => x.Answer)
                    @Html.HiddenFor(x => x.CategoryId)
                    @Html.HiddenFor(x => x.Deadline)
                    @Html.HiddenFor(x => x.JobStatusId)
                    @Html.HiddenFor(x => x.UserId)
                    @Html.HiddenFor(x => x.Name)
                </div>
            }
            else if (Model.JobStatusId == 3)
            {
                <div class="form-group ">
                    <p class="text-center font-weight-bold">Your Mark is @Model.Mark</p>
                </div>
            }
            else if (Model.JobStatusId == 1)
            {
                <div class="form-group ">
                    <p class="text-center font-weight-bold">Your answer is saved,<br /> wait while manager checks your answer</p>
                </div>
            }
        </div>
    </form>
    <div class="form-footer ">
        <a asp-action="Index" asp-controller="User">Back to List</a>
    </div>
</div>

